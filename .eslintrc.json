{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "airbnb", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "import/prefer-default-export": "off", // 단일 export 시 default
    "no-console": "error", // console 사용 x
    "no-unused-vars": "error", // 사용하지 않는 변수, 함수 및 함수 매개변수 error
    "no-alert": "off" // alert 사용
  }
}
